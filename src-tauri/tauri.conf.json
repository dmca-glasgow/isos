{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "isos",
    "version": "0.0.0"
  },
  "tauri": {
    "cli": {
      "description": "Hello Dave",
      "subcommands": {
        "run": {
          "description": "Run!!!",
          "args": [
            {
              "name": "file-path",
              "description": "The file path"
            }
          ]
        }
      }
    },
    "allowlist": {
      "all": false,
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/pandoc",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "writeFile": true,
        "readFile": true,
        "scope": ["*/**"]
      }
    },
    "windows": [
      {
        "title": "isos",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.isos.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["resources/*"],
      "externalBin": ["binaries/pandoc"]
    }
  }
}
