{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "isos",
    "version": "0.0.25"
  },
  "tauri": {
    "cli": {
      "description": "Hello Dave",
      "subcommands": {
        "run": {
          "description": "Run!!!",
          "args": [
            {
              "name": "file-path",
              "description": "The file path"
            }
          ]
        }
      }
    },
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "writeFile": true,
        "readFile": true,
        "scope": ["*/**"]
      }
    },
    "windows": [
      {
        "title": "isos",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["appimage", "nsis", "app", "updater"],
      "identifier": "com.isos.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["resources/*"]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/dmca-glasgow/12a09637fb047aa519cc2ea5fd662a8c/raw"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhGMzRCOUY4NDdGQURGNjkKUldScDMvcEgrTGswaitJY3VpcCtDM2l4eFk3dFFETGxoLzBNWFlzam8vdGhQdm5tV1JqUUhRQ1QK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
